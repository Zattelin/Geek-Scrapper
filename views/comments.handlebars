<div class="container">
  <div class="header clearfix">
    <h3 class="text-muted">Geek News</h3>
  </div>
  <hr>

  <div class="row">
    <h1><a href="{{result.link}}" target="_blank">{{result.title}}</a></h1>
  </div>
  <div class="row">
    <h2>Comments So Far</h2>
  </div>

  <div class="row">
    {{#unless result.comment}}
    <p>Add your Comment</p>
    {{/unless}}
  </div>

  <div class="row">
    <ul>
      {{#each result.comment}}
      <li style="list-style: none">
        <h5>Name: {{this.name}} </h5>
        <p>Message: {{this.body}}</p>
        <button class="delete-button btn btn-secondary" data-comment="{{this._id}}">Delete Comment</button>
      </li>
      {{/each}}
    </ul>
    
  </div>
  <div class="row">
    <h2>your Comment?</h2>
  </div>

  <form method="POST" action="/articles/{{result._id}}">
    <div class="form-group row">
      <label for="name" class="col-form-label">Name</label>
      <input class="form-control" type="text" name="name" id="name" required>
    </div>
    <div class="form-group row">
      <label for="body">Message</label>
      <textarea class="form-control" id="body" name="body" rows="3" required></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
  <br>
  <br>
  <br>
  <br>
  <footer class="footer">
    <div class="container">
    </div>
  </footer>
</div>